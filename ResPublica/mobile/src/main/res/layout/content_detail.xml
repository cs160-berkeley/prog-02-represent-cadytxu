<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity = "center|top">

    <ImageView
        android:layout_width="147dp"
        android:layout_height="177dp"
        android:id="@+id/photo"
        android:paddingTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailName"
        android:text="Name:"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party:"
        android:id="@+id/detailParty"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date of Term:"
        android:id="@+id/detailEndTerm"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committees:"
        android:id="@+id/detailCommittees"
        android:textSize="20dp"
        android:layout_margin="4pt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Bills:"
        android:id="@+id/detailRecentBills"
        android:textSize="20dp"
        android:layout_margin="4pt"/>
    </LinearLayout>
</ScrollView>
